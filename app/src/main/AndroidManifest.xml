<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tech.ironsheep.babyburpproto">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddChildActivity"
            android:label="@string/title_activity_add_child"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EditChildTreatmentsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddTreatmentActivity"
            android:label="@string/title_activity_add_treatment"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>